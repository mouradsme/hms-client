{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "siine-hostelo",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      
      "dialog": {
        "all": true, 
        "ask": true,
        "confirm": true, 
        "message": true, 
        "open": true, 
        "save": true 
      },
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "dz.siine.hostelo",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": true,
        "resizable": true,
        "title": "Siine (R) Hostelo",
        "minWidth": 1024,
        "minHeight": 768
      }
    ]
  }
}
